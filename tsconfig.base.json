{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cwp/core": ["libs/core/src/index.ts"],
      "@cwp/core/constants": ["libs/core/src/lib/constants/index.ts"],
      "@cwp/core/data-access": ["libs/core/src/lib/data-access/index.ts"],
      "@cwp/core/endpoint": ["libs/core/src/lib/environments/endpoint.ts"],
      "@cwp/core/interceptor": ["libs/core/src/lib/interceptor/index.ts"],
      "@cwp/core/model/mapper": ["libs/core/src/lib/model/mapper/index.ts"],
      "@cwp/core/model/request": [
        "libs/core/src/lib/model/request-model/index.ts"
      ],
      "@cwp/core/model/response": [
        "libs/core/src/lib/model/response-model/index.ts"
      ],
      "@cwp/core/model/view-model": [
        "libs/core/src/lib/model/view-model/index.ts"
      ],
      "@cwp/core/pipe": ["libs/core/src/lib/pipe/index.ts"],
      "@cwp/core/services": ["libs/core/src/lib/services/index.ts"],
      "@cwp/remotes-app/account": ["libs/remotes-app/account/src/index.ts"],
      "@cwp/remotes-app/admin": ["libs/remotes-app/admin/src/index.ts"],
      "@cwp/remotes-app/community": ["libs/remotes-app/community/src/index.ts"],
      "@cwp/remotes-app/customer-support": [
        "libs/remotes-app/customer-support/src/index.ts"
      ],
      "@cwp/remotes-app/dashboard": ["libs/remotes-app/dashboard/src/index.ts"],
      "@cwp/remotes-app/design-system": [
        "libs/remotes-app/design-system/src/index.ts"
      ],
      "@cwp/remotes-app/home": ["libs/remotes-app/home/src/index.ts"],
      "@cwp/remotes-app/marketplace": [
        "libs/remotes-app/marketplace/src/index.ts"
      ],
      "@cwp/remotes-app/page": ["libs/remotes-app/page/src/index.ts"],
      "@cwp/remotes-app/spinner": ["libs/remotes-app/spinner/src/index.ts"],
